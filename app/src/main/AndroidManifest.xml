<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.alex.newtestproject">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 高德地图植入 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="26a285d82b141992a6dae44551d39807"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".gaode.LocationSourceActivity">
        </activity>
        <activity android:name=".gaode.MineMapActivity">
        </activity>
        <activity android:name=".ListItemActivity">
        </activity>

        <!-- 地图路线规划 -->
        <activity
            android:name=".gaode.DriveRouteDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".gaode.RoutePlanningActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".gaode.BusRouteDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".gaode.WalkRouteDetailActivity"/>

        <!-- 定位需要的服务 使用2.0的定位需要加上这个 -->
        <service android:name="com.amap.api.location.APSService"/>

        <activity android:name=".rxJava.RxJavaDemoTestActivity">
        </activity>
        <activity android:name=".serverapi.XApiActivity">
        </activity>
        <activity android:name=".test.TesterListItemActivity">
        </activity>
        <activity android:name=".test.XTestActivity">
        </activity>
    </application>

</manifest>