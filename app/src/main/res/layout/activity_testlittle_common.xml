<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_click3"
            style="@style/AppBaseTextview"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="分片读取并切割"/>

        <Button
            android:id="@+id/btn_click1"
            style="@style/AppBaseTextview"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="gson解析器"/>

        <Button
            android:id="@+id/btn_click2"
            style="@style/AppBaseTextview"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="MD5与sha256性能"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_click4"
            style="@style/AppBaseTextview"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="上传"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_click5"
        style="@style/AppBaseTextview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="新切割方法"/>

    <Button
        android:id="@+id/btn_click6"
        style="@style/AppBaseTextview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="新合并验证"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        tools:listitem="@layout/item_upload_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>