<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_teststyle"
            android:layout_width="150px"
            android:layout_height="60px"
            android:background="@color/white"
            android:drawablePadding="50px"
            android:drawableRight="@drawable/arrow_down"
            android:text="测sdssds"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_teststyle2"
            android:layout_width="150px"
            android:layout_height="60px"
            android:background="@color/white"
            android:drawablePadding="50px"
            android:drawableRight="@drawable/arrow_down_blue"
            android:text="测sdssds222"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_text_many"
            style="@style/textstyle001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试文字颜色多样化"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_result"
            style="@style/textstyle001"
            android:text="操作结果"/>

        <Button
            android:id="@+id/tv_login_status"
            style="@style/buttonstyle001"
            android:text="登录"/>

        <Button
            android:id="@+id/tv_get_splash_data"
            style="@style/buttonstyle001"
            android:text="获取欢迎页数据"/>

        <Button
            android:id="@+id/tv_get_data"
            style="@style/buttonstyle001"
            android:text="以动态map参数形式访问接口"/>

        <Button
            android:id="@+id/btn_1"
            style="@style/buttonstyle001"
            android:text="Post访问登录接口"/>

        <Button
            android:id="@+id/btn_2"
            style="@style/buttonstyle001"
            android:text="访问返回结果为String"/>

        <Button
            android:id="@+id/btn_3"
            style="@style/buttonstyle001"
            android:text="未定"/>


    </LinearLayout>
</ScrollView>